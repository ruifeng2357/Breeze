<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/decelerate_interpolator">
    <scale android:duration="2500"
			android:fromXScale="1"
			android:fromYScale="1"
			android:pivotX="50%"
			android:pivotY="50%"
			android:repeatCount="infinite"
			android:toXScale="2.75"
			android:toYScale="2.75" />
	<alpha android:fromAlpha="0.75"
		   android:toAlpha="0.1"
		   android:duration="2500"
		   android:repeatCount="infinite" />
</set>
